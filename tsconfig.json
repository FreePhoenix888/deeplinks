{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "outDir": "build",
    "noImplicitAny": false,
    "removeComments": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es6",
      "es7"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
  },
  "exclude": [
    "./node_modules",
    "./build",
    "migrations"
  ]
}